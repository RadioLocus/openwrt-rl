#!/bin/ash

echo "Adding to crontab"
if [ ! -f /etc/crontabs/root ]; then
        touch /etc/crontabs/root
fi
echo "removing existing crons for blu_sniffex"
sed -i '/blu_sniffex/d' /etc/crontabs/root
echo "adding cron"
echo '*/1 * * * * . /etc/profile;/etc/init.d/blu_sniffex start' >> /etc/crontabs/root
/etc/init.d/cron reload
echo "added cron"
echo "opening hci device"
hciconfig hci0 up
